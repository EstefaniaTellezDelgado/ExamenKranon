@model ML.Editorial
@{
    ViewBag.Title = "Form";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

    <br />
    <h2>Editorial</h2>
    <h5>Ingrese los datos de la editorial</h5>
    <hr />


<div class="row">
    <div class="col-md-12">
        @using (Html.BeginForm("Form", "Editorial", FormMethod.Post, new { enctype = "multipart/form-data" }))
        {
            <div class="form-horizontal">
                <div class="form-group">
                    <div class="col-md-3">
                        <div class="col-md-3" style="display: none;">
                            @Html.LabelFor(model => model.IdEditorial, new { @class = "hidden" })
                            @Html.TextBoxFor(model => model.IdEditorial, new { @class = "hidden form-control", @autocomplete = "off" })
                            @Html.ValidationMessageFor(model => model.IdEditorial)
                        </div>
                    </div>
                </div>
                <div class="form-group">
                    <div class="col-md-3">
                        @Html.LabelFor(model => model.Nombre)
                        @Html.TextBoxFor(model => model.Nombre, new { @class = "form-control", @id = "txtNombre" })
                        @Html.ValidationMessageFor(model => model.Nombre)
                        <br />
                    </div>
                </div>
                <div class="form-group">
                    <div class="col-md-3">
                        @Html.LabelFor(model => model.Direccion)
                        @Html.TextBoxFor(model => model.Direccion, new { @class = "form-control", @id = "txtDireccion" })
                        @Html.ValidationMessageFor(model => model.Direccion)
                        <br />
                    </div>
                </div>
                <div class="form-group">
                    <div class="col-md-3">
                        <input type="submit" value="Guardar" class="btn btn-success" />
                        @Html.ActionLink("Regresar", "GetAll", "Editorial", htmlAttributes: new { @class = "btn btn-danger" })
                    </div>
                </div>
            </div>
        }
    </div>
</div>