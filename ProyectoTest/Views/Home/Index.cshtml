@{
    ViewBag.Title = "Home Page";
}

<h1 class="mt-4">KRANON</h1>
<h5> Da click en ver detalles para acceder a los catalogos</h5>
<hr />
    <ol class="breadcrumb mb-4">
        <li class="breadcrumb-item active"></li>
    </ol>
    <div class="row">
        <div class="col-4">
            <div class="card text-white mb-4" style="background-color: #ff6500">
                <img src="~/Imagenes/libro.jpg" width="393px" height="300px" class="d-flex flex-row alig-items-center">
                <div class="card-body">
                    <div class="d-flex justify-content-between">
                        <div>L I B R O S</div>
                    </div>
                </div>
                <div class="card-footer d-flex align-items-center justify-content-between">
                    <a class="small text-white stretched-link" href="@Url.Action("GetAll","Libro")">Ver Detalles</a>
                    <div class="small text-white"><i class="fas fa-angle-right"></i></div>
                </div>
            </div>
        </div>
        <div class="col-4 justify-content-center">
            <div class="card text-white mb-4" style="background-color: #ff6500">
                <img src="~/Imagenes/biblioteca.jpg" width="393px" height="300px" id="Img">
                <div class="card-body">
                    <div class="d-flex justify-content-between">
                        <div>E D I T O R I A L E S</div>
                    </div>
                </div>
                <div class="card-footer d-flex align-items-center justify-content-between">
                    <a class="small text-white stretched-link" href="@Url.Action("GetAll","Editorial")">Ver Detalles</a>
                    <div class="small text-white"><i class="fas fa-angle-right"></i></div>
                </div>
            </div>
        </div>
        <div class="col-4">
            <div class="card text-white mb-4" style="background-color: #ff6500">
                <img src="~/Imagenes/autor.jpg" width="392px" height="300px" id="Img">
                <div class="card-body">
                    <div class="d-flex justify-content-between">
                        <div>A U T O R E S</div>
                    </div>
                </div>
                <div class="card-footer d-flex align-items-center justify-content-between">
                    <a class="small text-white stretched-link" href="@Url.Action("GetAll","Autor")">Ver Detalles</a>
                    <div class="small text-white"><i class="fas fa-angle-right"></i></div>
                </div>
            </div>
        </div>
        <div class="col-4">
            <div class="card text-white mb-4" style="background-color: #ff6500">
                <img src="~/Imagenes/generosliterarios.jpg" width="393px" height="300px" id="Img">
                <div class="card-body">
                    <div class="d-flex justify-content-between">
                        <div>G E N E R O S</div>
                    </div>
                </div>
                <div class="card-footer d-flex align-items-center justify-content-between">
                    <a class="small text-white stretched-link" href="@Url.Action("GetAll","Genero")">Ver Detalles</a>
                    <div class="small text-white"><i class="fas fa-angle-right"></i></div>
                </div>
            </div>
        </div>
    </div>
    @section scripts{

        <script>
        $(document).ready(function () {
            jQuery.ajax({
                url: '@Url.Action("ListarProducto", "Home")',
                type: "GET",
                data: null,
                dataType: "json",
                contentType: "application/json; charset=utf-8",
                success: function (data) {

                    if (data.data != null) {
                        $("#total-productos").text(data.data.length);
                    }
                },
                error: function (error) {
                    console.log(error)
                },
                beforeSend: function () {

                },
            });

             jQuery.ajax({
                url: '@Url.Action("ListarMarca", "Home")',
                type: "GET",
                data: null,
                dataType: "json",
                contentType: "application/json; charset=utf-8",
                success: function (data) {
                    if (data.data != null) {
                        $("#total-marcas").text(data.data.length);
                    }
                },
                error: function (error) {
                    console.log(error)
                },
                beforeSend: function () {

                },
            });

             jQuery.ajax({
                url: '@Url.Action("ListarCategoria", "Home")',
                type: "GET",
                data: null,
                dataType: "json",
                contentType: "application/json; charset=utf-8",
                success: function (data) {
                    if (data.data != null) {
                        $("#total-categorias").text(data.data.length);
                    }
                },
                error: function (error) {
                    console.log(error)
                },
                beforeSend: function () {

                },
            });

        })
        </script>
    }
